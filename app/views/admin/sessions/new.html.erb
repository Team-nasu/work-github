<div class="container mx-auto">
  <div class="row">
    <h4 class="col-md-3">管理者ログイン</h4>
  </div>

    <div class="d-flex flex-row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label 'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-5' %>
      </div>

      <div class="field">
        <%= f.label 'パスワード' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
    
      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
 
</div>