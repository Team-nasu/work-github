<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>


<%= form_with model:@customer, url: admin_customer_path(@customer), method: :patch do |f| %>

  <div class="form-group col-md-6">
  <div class="row">
    <div class="col"><label>会員ID</label></div><div class="col"><%= @customer.id %></div></div>
  </div>
  
  <div class="row">
    <div class="col"><label><%= f.text_field :last_name, placeholder: "令和" %></div><div class="col"><%= f.text_field :first_name, placeholder: "道子" %></div></div>
  </div>
  <div class="row">
    <div class="col"><label>フリガナ</label></div><div class="col"><%= f.text_field :last_name_kana, placeholder: "レイワ" %></div><div class="col"><%= f.text_field :first_name_kana, placeholder: "ミチコ" %><</div></div>
  </tr><br>
  <tr>
    <th>郵便番号</th><td><%= f.text_field :postcode, placeholder: "0000000" %></td><td></td><td></td>
  </tr><br>
  <tr>
    <th>住所</th><td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
  </tr><br>
  <tr>
    <th>電話番号</th><td><%= f.text_field :phone_number, placeholder: "0000000000" %></td><td></td><td></td>
  </tr><br>
  <tr>
    <th>メールアドレス</th><td><%= f.text_field :email, placeholder: "sample@example.com" %></td><td></td><td></td>
  </tr><br>
  <tr>
    <th>会員ステータス</th>
    <td>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted_Available, "有効" %>
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted_Invalid, "退会" %>
    </td>
  </tr><br>
  <tr>
    <th></th><td><%= f.submit '編集内容を保存', class: "btn btn-primary" %></td>
  </tr><br>
<% end %>
