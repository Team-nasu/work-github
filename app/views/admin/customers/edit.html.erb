<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
<table>
  <tr>
    <th>会員ID</th><td><%= @customer.id %></td>
  </tr>
<%= form_with model:@customer, url: admin_customer_path(@customer), method: :patch do |f| %>
  <tr>
    <th>氏名</th><td><%= f.text_field :last_name, placeholder: "令和" %></td><td><%= f.text_field :first_name, placeholder: "道子" %></td><td></td>
  </tr>
  <tr>
    <th>フリガナ</th><td><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td><td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td><td></td>
  </tr>
  <tr>
    <th>郵便番号</th><td><%= f.text_field :postcode, placeholder: "0000000" %></td><td></td><td></td>
  </tr>
  <tr>
    <th>住所</th><td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
  </tr>
  <tr>
    <th>電話番号</th><td><%= f.text_field :phone_number, placeholder: "0000000000" %></td><td></td><td></td>
  </tr>
  <tr>
    <th>メールアドレス</th><td><%= f.text_field :email, placeholder: "sample@example.com" %></td><td></td><td></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td>
      <%= f.radio_button :is_deleted, :Available %>
      <%= f.label :is_deleted_Available, "有効" %>
      <%= f.radio_button :is_deleted, :Invalid %>
      <%= f.label :is_deleted_Invalid, "退会" %>
  </td>
  </tr>
  <tr>
    <th></th><td><%= f.submit '編集内容を保存', class: "btn btn-primary" %></td>
  </tr>
<% end %>
</table>