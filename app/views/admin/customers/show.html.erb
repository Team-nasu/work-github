<div class="col-5 offset-md-1 mt-3">
<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
<table class="table table-borderless">
  <tr>
    <td>会員ID</th><td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td><td><%= @customer.last_name %>　<%= @customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td><td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td><td><%= @customer.postcode %></td>
  </tr>
  <tr>
    <td>住所</td><td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td><td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td><td><%= @customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
      <% if @customer.is_deleted == false %>
        <p class="text-success">有効</p>
      <% else %>
        <p class="text-secondary">退会済み</p>
      <% end %>
    </td>
  </tr>
  <tr>
    <th></th>
    <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></td>
  </tr>
</table>
</div>