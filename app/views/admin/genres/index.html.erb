<div class="container">
  <div class="row">
    <h4 class="col-sm">ジャンル一覧・追加</h4>
  </div>

  <div class="row justify-content-start p-4">
    <div class="d-flex flex-row">
      <p>ジャンル名</p>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>

      <%= f.text_field :name, class: 'mx-3' %>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-3 offset-md-1 pt-3">
      <table class="table">
        <tr>
          <th class="p-3">ジャンル</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td class="col-sm-7"><%= genre.name %></td>
          <td class="col-sm-5"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success btn-sm' %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>


</div>