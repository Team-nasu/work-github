<h3>購入者</h3>
<%= @order.shipping_name %>
<h3>注文日</h3>
<%= @order.created_at %>
<h3>配送先</h3>
<%= @order.payment_method %>
<h3>注文ステータス</h3>

        <%= form_with model: @order, url: admin_path, method: :patch do |f| %>
         <%= f.select :order_status, ["入金待ち","入金確認","製作中","発送準備中","発送済み"] %>
            <%= f.submit '更新' %>
        <% end %>

<div class="container">
  <div class="row">
    <div class="col-9">
      <table class="table">
        <thead class="table-active">
          <tr>
            <th class="col-3">商品名</th>
            <th class="col-2">単価(税込)</th>
            <th class="col-2">数量</th>
            <th class="col-2">小計</th>
            <th class="col-3">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @order.order_products.each do |order_product| %>
          <tr>
            <td><%= order_product.product.name %></td>
            <td><%= order_product.price %></td>
            <td><%= order_product.amount %></td>
            <td><%= order_product.subtotal %></td>
            <td>
              <%#= form_with model: @order, url: admin_path, method: :patch do |f| %>
                <%#= f.select :order_status, ["着手不可","製作待ち","製作中","製作完了"] %>
                <%#= f.submit '更新' %>
              <%# end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-3">
      <% total = 0 %>
      <% @order.order_products.each do |order_product| %>
        <% total += order_product.subtotal %>
      <% end %>
      <table>
        <tr>
          <th class="col-7">商品合計</th><td class="col-5"> <%= total %>円</td>
        </tr>
        <tr>
          <th class="col-7">配送料</th><td class="col-5"> <%= @order.postage %>円</td>
        </tr>
        <tr>
          <th class="col-7">請求金額合計</th><th class="col-5"> <%= @order.billing_amount %>円</th>
      </table>
    </div>

  </div>
</div>

