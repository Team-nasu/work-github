<div class="container">
  <div class="navbar">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <tr>
        <th class="col-2">購入者</th><td class="col-10"><%= @order.shipping_name %></td>
      </tr>
      <tr>
        <th class="col-2">注文日</th><td class="col-10"><%= @order.created_at %></td>
      </tr>
      <tr>
        <th class="col-2">配送先</th><td class="col-10">〒<%= @order.shipping_postal_code %> <%= @order.shipping_address %><br><%= @order.shipping_name %></td>
      </tr>
      <tr>
        <th class="col-2">支払方法</th><td class="col-10"><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th class="col-2">注文ステータス</th>
        <td class="col-10">
            <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
              <!--<= f.select :order_status, options_from_collection_for_select(Genre.all, :id, :name) %>-->
             <!--<= f.select :order_status, options_for_select(Order.order_statuses.keys) %>-->
             <!--<= f.select :order_status, Order.order_statuses_i18n.keys.to_a %>-->
<%= f.select :order_status, Order.order_statuses_i18n.keys.map{|k| [Order.order_statuses_i18n[k],k]} %>
            <span class="actions"><%= f.submit '更新', class: "btn btn-success" %></span>
            <% end %>
        </td>
      </tr>
    </table>
  </div>

  <div class="row">
    <div class="col-9">
      <table class="table">
        <thead class="table-active">
          <tr>
            <th class="col-3">商品名</th>
            <th class="col-2">単価(税込)</th>
            <th class="col-2">数量</th>
            <th class="col-2">小計</th>
            <th class="col-3">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @order.order_products.each do |order_product| %>
          <tr>
            <td><%= order_product.product.name %></td>
            <td><%= order_product.price %></td>
            <td><%= order_product.amount %></td>
            <td><%= order_product.subtotal %></td>
            <td>
              <%= form_with model: order_product, url: admin_order_product_path(order_product), method: :patch do |f| %>
                <%= f.select :making_status, OrderProduct.making_statuses.keys.map{|k| [OrderProduct.making_statuses_i18n[k],k]} %>
                <%= f.submit '更新', class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-3">
      <% total = 0 %>
      <% @order.order_products.each do |order_product| %>
        <% total += order_product.subtotal %>
      <% end %>
      <table>
        <tr>
          <th class="col-7">商品合計</th><td class="col-5"> <%= total %>円</td>
        </tr>
        <tr>
          <th class="col-7">配送料</th><td class="col-5"> <%= @order.postage %>円</td>
        </tr>
        <tr>
          <th class="col-7">請求金額合計</th><th class="col-5"> <%= @order.billing_amount %>円</th>
      </table>
    </div>

  </div>
</div>

