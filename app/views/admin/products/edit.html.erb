<div class="container" style="font-size: 15px;">
  <div class="row mt-4">
    <h2>商品編集</h2>
  </div>
  <%= form_with model: @product, url: admin_product_path, method: :patch do |f| %>
   <table class="table table-borderless">
     <tr>
      <th>商品画像</th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    
    <tr>
      <th>商品名</th>
      <td><%= f.text_field :name %></td>
    </tr>
    
     <tr>
      <th>商品説明</th>
      <td><%= f.text_area :introduction %></td>
    </tr>
    
    <tr>
      <th>ジャンル</th>
      <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
    　<!--<= f.select :Genre.name, options_for_select(Genre.names.keys), { include_blank: "--選択して下さい--" } %>-->
    </tr>
   
    <tr>
      <th>税抜価格</th>
      <td><%= f.text_field :price %></td>
    </tr>
   
    <tr>
      <th>販売ステータス</th>
      <td>
        <%= f.radio_button :is_active, true %>販売中
        <%= f.radio_button :is_active, false %>販売停止中
      </td>
      
    </tr>

  　<tr>
      <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
    </tr>
    </table>
  <% end %>
 
</div>  