<div class="container mx-auto">
  <div class="row">
    <h3>注文履歴一覧</h3>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @orders.each do |order| %>
            <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= order.name %></td>
            <td><%= order.order_products.sum(:amount) %></td>
            <% end %>
           </tr>
        </tbody>
      </table>

  </div>
</div>