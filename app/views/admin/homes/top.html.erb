<div class="container mx-auto">
  <div class="row">
    <div class="col-sm-12 col-md-11 col-lg-8  mx-auto">
    <h3>注文履歴一覧</h3>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_path(:id) %></td>
            <td><%= order.shipping_name %></td>
            <td><%= order.order_products.sum(:amount) %></td>
            <td><%= order.order_status_i18n %></td>
          </tr>
        </tbody>
         <% end %>
      </table>
    </div>
  </div>
</div>
  <div class="col d-flex justify-content-center">
    <%= paginate @orders %>
  </div>
</nav>