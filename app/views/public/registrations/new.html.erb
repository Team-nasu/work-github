<div class="container">
  <div class="navbar">
    <h1>新規会員登録</h1>
  </div>


    <%= form_with model: @customer ,url: customer_registration_path, method: :post do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="row mb-3">
        <label class="col-sm-3 col-form-label">名前 </label>
        <div class="col-sm-9">
          <div class="row">
            <label class="col-form-label col-sm-1">姓</label>
            <div class="col-sm">
              <div class="field">
                <%= f.text_field :last_name, placeholder: "令和" %>
              </div>
            </div>
            <label class="col-form-label col-sm-1">名</label>
            <div class="col-sm">
              <div class="field">
                <%= f.text_field :first_name, placeholder: "道子"%>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-sm-3 col-form-label">フリガナ </label>
        <div class="col-sm-9">
          <div class="row">
            <label class="col-form-label col-sm-1">セイ</label>
            <div class="col-sm">
              <div class="field">
                <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
              </div>
            </div>
            <label class="col-form-label col-sm-1">メイ</label>
            <div class="col-sm">
              <div class="field">
                <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label">メールアドレス </label>
        <div class="col-sm-9">
          <div class="field">
            <%= f.email_field :email, placeholder: "sample@example.com", class: "col-md-6"%>
          </div>
        </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label">郵便番号(ハイフンなし) </label>
        <div class="col-sm-9">
          <div class="field">
            <%= f.text_field :postcode, placeholder: "0000000", class: "col-md-6" %>
          </div>
        </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label">住所 </label>
        <div class="col-sm-9">
          <div class="field">
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-md-6" %>
          </div>
        </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label">電話番号(ハイフンなし) </label>
        <div class="col-sm-9">
          <div class="field">
            <%= f.text_field :phone_number, placeholder: "00000000000", class: "col-md-6" %>
          </div>
        </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label">パスワード(6文字以上) </label>
        <div class="col-sm-9">
          <div class="field">
            <%= f.password_field :password, class: "col-md-6" %>
          </div>
        </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label">パスワード(確認用) </label>
        <div class="col-sm-9">
          <div class="field">
            <%#= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-6" %>
          </div>
        </div>
      </div>

      <div class="row">
        <label class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
          <div class="actions">
            <%= f.submit "新規登録", class: 'btn btn-sm btn-success col-md-5' %>
          </div>
        </div>
      </div>
      <% end %>

  <div class="navbar">
    <h4>既に登録済みの方</h4>
  </div>
  <div>
    <%= link_to "こちら", new_customer_session_path, class: "col-md-3" %>からログインしてください
  </div>

</div>
