<div class="container">
<div class="row no-gutters py-3">
  <h2 class="col-12 col-sm-6 col-md-8">ショッピングカート</h2>
  <div class="col-6 col-md-4">
    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: { confirm: '本当に空にしますか？'}, class: "btn btn-danger pull-right" %>
  </div>
</div>

<table class="table table-bordered">
  <thead>
    <tr class="table-info">
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.product.get_image(50,50) %>
        <%= cart_item.product.name %>
      </td>
      <td><%= cart_item.product.with_tax_price %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= cart_item.subtotal * cart_item.quantity %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
      <% @total += cart_item.subtotal %>
    </tr>
    <% end %>
  </tbody>
</table>

<div><%= link_to "買い物を続ける", products_path %></div>
<div>合計金額（税込）<%= @total %></div>

</div>
