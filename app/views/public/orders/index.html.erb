<h4>注文履歴一覧</h4>
<div class="table">
  <table>
    <tr>
      <th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.shipping_post_code %><br><%= order.shipping_address %><br><%= order.shipping_name %></td>
        <td><%= order.order_product_id.product.name %></td>
        <td><%= order.orders.order_status %></td>
        <td><%= link_to "表示する", order_path(order) %></td>
      </tr>
    <% end %>

  </table>
</div>