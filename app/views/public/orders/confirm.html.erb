<h4>注文情報確認</h4>
<div class="container">
  <div class="row">
    <div class="col-8">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <!--合計金額初期化-->
        <% total = 0 %>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.@product.get_image(60,50) %><%= cart_item.@product.name %></td>
            <td><%= (cart_item.@product.price*1.08).to_i %></td>
            <td><%= cart_item.quantity %></td>
            <td>
              <%= subtotal = ((cart_item.@product.price*cart_item.quantity)*1.08).to_i %>
              <%= subtotal %>
            </td>
          </tr>
          <% total += (cart_item.@product.price*cart_item.quantity)*1.08 %>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3 offset-md-1">
      <table>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
          <th>商品合計</th>
          <td><%= total.to_i %></td>
          <th>請求金額</th>
          <% @order.billing_amount = @order.postage + total.to_i %>
          <td><% @order.billing_amount %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <table>
      <tr>
        <th>支払方法</th><td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>お届け先</th>
        <td>
          <!--配送先郵便番号と住所-->
          〒<%= @order.shipping_postal_code %><%= @order.shipping_address %><br>
          <!--配送先名前-->
          <%= @order.shipping_name %>
        </td>
      </tr>
    </table>
  </div>
</div>
<%= form_with model:@order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id %>
  <%= f.hidden_field :postage %>
  <%= f.hidden_field :total_payment %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :shipping_name %>
  <%= f.hidden_field :shipping_address %>
  <%= f.hidden_field :shipping_postal_code %>
  <%= f.hidden_field :making_status %>
	<%= f.submit '注文を確定する' ,class: "btn btn-success"%>
<% end %>


