<h4>注文履歴詳細</h4>
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col offset-1">
      <h5 class="font-weight-bold">注文情報</h5>
        <table class="table table-bordered">
          <tr>
            <td>注文日</td><td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          </tr>
          <tr>
            <td>配送先</td><td>〒<%= @order.shipping_postal_code %><br><%= @order.shipping_address %><br><%= @order.shipping_name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td>ステータス</td><td><%= @order.order_status %></td>
          </tr>
        </table>
      </div>

    <div class="col">
      <h5 class="font-weight-bold">請求情報</h5>

      <% total = 0 %>
      <% @order.order_products.each do |order_product| %>
        <% total += order_product.subtotal %>
      <% end %>
      <div class="table">
        <table class="table table-bordered">
          <tr>
            <td>商品合計</td><td><%= total %></td>
          </tr>
          <tr>
            <td>配送料</td><td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th><td><%= @order.billing_amount %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col offset-1">
    <h5 class="font-weight-bold">注文内容</h5>
      <table class="table table-bordered">
        <tr>
          <td>商品名</td><td>単価(税込)</td><td>個数</td><td>小計</td>
        </tr>

        <tr>
          <% @order.order_products.each do |order_product| %>
        <br>

          <td><%= order_product.product.name %></td>
          <td><%= order_product.price %></td>
          <td><%= order_product.amount %></td>
          <td><%= order_product.subtotal %></td>
        </tr>
        <% end %>
      </table>
      </div>
    </div>
</div>
