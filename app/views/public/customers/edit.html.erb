<h4>会員情報編集</h4>
<%= form_with model:@customer, url: customers_path(), method: :patch do |f| %>
<table>
  <tr>
    <th>氏名</th><td><%= f.text_field :last_name %></td><td><%= f.text_field :first_name %></td><td></td>
  </tr>
  <tr>
    <th>フリガナ</th><td><%= f.text_field :last_name_kana %></td><td><%= f.text_field :first_name_kana %></td><td></td>
  </tr>
  <tr>
    <th>郵便番号</th><td><%= f.text_field :postcode %></td><td></td><td></td>
  </tr>
  <tr>
    <th>住所</th><td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号</th><td><%= f.text_field :phone_number %></td><td></td><td></td>
  </tr>
  <tr>
    <th>メールアドレス</th><td><%= f.text_field :email %></td><td></td><td></td>
  </tr>
  <tr>
    <th></th><td><%= f.submit '編集内容を保存', class: "btn btn-primary" %></td>
    <% end %>
    <td><%= link_to '退会する', customers_check_path , class: "btn btn-danger" %></td>
  </tr>

</table>