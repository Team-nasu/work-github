<h4>会員情報編集</h4>
<%= form_with model:@customer, url: customers_information_path(@customer), method: :patch do |f| %>
<div class="form-group col-md-6">

  <div class="row">
    <div class="col"><label>氏名</label></div><div class="col"><%= f.text_field :last_name, placeholder: "令和" %></div><div class="col"><%= f.text_field :first_name, placeholder: "道子" %></div>
  </div>

  <div class="row">
    <div class="col"><label>フリガナ</label></div><div class="col"><%= f.text_field :last_name_kana, placeholder: "レイワ" %></div><div class="col"><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></div>
  </div>

  <div class="row">
    <div class="col"><label>郵便番号</label></div><div class="col"><%= f.text_field :postcode, placeholder: "0000000" %></div><div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><label>住所</label></div><div class="col"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></div><div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><label>電話番号</label></div><div class="col"><%= f.text_field :phone_number, placeholder: "0000000000" %></div><div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><label>メールアドレス</label></div><div class="col"><%= f.text_field :email, placeholder: "sample@example.com" %></div><div class="col"></div>
  </div>

</div>

<div class="row">
    <div class="col"><%= f.submit '編集内容を保存', class: "btn btn-primary" %></div>
<% end %>
    <div class="col"><%= link_to '退会する', customers_check_path , class: "btn btn-danger" %></div>
 </div>
